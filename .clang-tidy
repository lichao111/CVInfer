Checks: >
  bugprone-*,
  misc-*,
  performance-*,
  portability-*,
  readability-*,
  -misc-non-private-member-variables-in-classes,  
  -readability-qualified-auto
  -readability-identifier-length
  -readability-braces-around-statements
# Turn all the warnings from the checks above into errors.
WarningsAsErrors: "*"

HeaderFilterRegex:^(?!.*test\\/).*

CheckOptions:
  - { key: readability-identifier-naming.NamespaceCase,           value: lower_case }
  - { key: readability-identifier-naming.ClassCase,               value: CamelCase  }
  - { key: readability-identifier-naming.StructCase,              value: CamelCase  }
  - { key: readability-identifier-naming.TemplateParameterCase,   value: CamelCase  }
  - { key: readability-identifier-naming.FunctionCase,            value: CamelCase  }
  - { key: readability-identifier-naming.GlobalFunctionPrefix,    value: CV_INFER_   }
  - { key: readability-identifier-naming.GlobalFunctionCase,      value: CamelCase  }
  - { key: readability-identifier-naming.VariableCase,            value: lower_case }
  - { key: readability-identifier-naming.ProtectedMemberCase,     value: CamelCase  }
  - { key: readability-identifier-naming.MacroDefinitionCase,     value: UPPER_CASE }
  - { key: readability-identifier-naming.EnumConstantCase,        value: CamelCase  }
  - { key: readability-identifier-naming.ConstexprVariableCase,   value: UPPER_CASE }
  - { key: readability-identifier-naming.GlobalVariableCase,      value: UPPER_CASE }
  - { key: readability-identifier-naming.GlobalConstantCase,      value: UPPER_CASE }
  - { key: readability-identifier-naming.MemberConstantCase,      value: CamelCase  }
  - { key: readability-identifier-naming.StaticConstantCase,      value: CamelCase  }
